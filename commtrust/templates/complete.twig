{% extends 'index.twig' %}

{% block proof %}
<a href="/">home</a><br>
<h3>Attestation {{ type }} via {{ id }}</h3>
{% if proof %}
    <p>Found proof:<br>
    Acquired from {{ source }}<br>
    <a href="{{ url }}?aid={{ aid }}&action=retract">Retract</a> proof<br>
    <pre>{{ proof }}</pre>
{% else %}
    {% if start %}
        <p>Attestation completed</p>
    {% else %}
        <p><a href="{{ url }}?aid={{ aid }}&action=start">Start</a> Attestation</p>
    {% endif %}
{% endif %}
{% endblock %}

{% block open %}
{% endblock %}

{% block completed %}
{% endblock %}

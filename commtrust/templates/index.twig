<div class="container">
<h3>Unlocked Attestations</h3>
{% for attestation in attestations %}
    <div class="attestation">
    {{ attestation['name'] }}
    </div>
{% endfor %}
</div>

<div class="container">
<h3>Approved Claims</h3>
{% for claim in approved %}
<div class="idcard approved">
<a href="/complete.php?cid={{ claim['claim_id'] }}">{{ claim['name'] }}</a><br>
<div class="evidence">
proved at {{ claim['proved_at'] }}<br>
via {{ claim['source'] }}
{% if claim['ra'] %}<br>
approved by {{ claim['ra'] }}<br>
on {{ claim['approved_at'] }}
{% endif %}<br>
{% for k,v in claim['card'] %}
{{ k }}: {{ v }}<br>
{% endfor %}
</div>
</div>
{% endfor %}
</div>

<div class="container">
<h3>Completed Claims</h3>
{% for claim in completed %}
<div class="idcard completed">
<a href="/complete.php?cid={{ claim['claim_id'] }}">{{ claim['name'] }}</a><br>
<div class="evidence">
proved at {{ claim['proved_at'] }}<br>
via {{ claim['source'] }}
{% if claim['ra'] %}<br>
approved by {{ claim['ra'] }}<br>
on {{ claim['approved_at'] }}
{% endif %}<br>
{% for k,v in claim['card'] %}
{{ k }}: {{ v }}<br>
{% endfor %}
</div>
</div>
{% endfor %}
</div>

<div class="container">
<h3>Open Claims</h3>
{% for claim in open %}
<div class="idcard open">
<a href="/complete.php?cid={{ claim['claim_id'] }}">{{ claim['name'] }}</a><br>
</div>
{% endfor %}
</div>
